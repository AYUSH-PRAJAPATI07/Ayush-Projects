<odoo>
    <record id="view_video_call_bypass_wizard" model="ir.ui.view">
        <field name="name">video.call.bypass.wizard.form</field>
        <field name="model">video.call.bypass.wizard</field>
        <field name="arch" type="xml">
            <form string="Bypass Contact Attempt">
                <group>
                    <field name="reason" widget="text"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
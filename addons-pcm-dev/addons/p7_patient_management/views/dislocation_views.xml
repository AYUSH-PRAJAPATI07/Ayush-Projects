<odoo>
    <data>

        <!-- Dislocation view -->
        <record id="view_dislocation_form" model="ir.ui.view">
            <field name="name">res.dislocation.form</field>
            <field name="model">res.dislocation</field>
            <field name="arch" type="xml">
                <form string="Setup Disposition Locations">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="explanation" placeholder="Write here..." class="oe-bordered-editor o_example_note"/>
                            <field name="created_by" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_dislocation_tree" model="ir.ui.view">
            <field name="name">res.dislocation.tree</field>
            <field name="model">res.dislocation</field>
            <field name="arch" type="xml">
                <tree string="Setup Disposition Locations">
                    <field name="name"/>
                    <field name="explanation"/>
                    <field name="created_by"/>
                </tree>
            </field>
        </record>

        <record id="view_dislocation_search" model="ir.ui.view">
            <field name="name">dislocation.select</field>
            <field name="model">res.dislocation</field>
            <field name="arch" type="xml">
                <search string="Search Disposition Locations">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="action_dislocation_details" model="ir.actions.act_window">
            <field name="name">Setup Disposition Locations</field>
            <field name="res_model">res.dislocation</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_dislocation_tree"/>
            <field name="domain">[]</field>
            <field name="context"></field>
            <field name="help" type="html">
                <p>
                    This is the list of Disposition Locations.
                </p>
            </field>
        </record>

    </data>
</odoo>
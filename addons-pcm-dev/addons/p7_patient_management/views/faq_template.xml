<odoo>
    <data>
        <!-- faq page -->
        <template id="faq_template" name="FAQ Page">
            <t t-set="no_header" t-value="True"/>
            <t t-set="no_footer" t-value="True"/>
            <meta charset="UTF-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0" />
            <title>FAQ</title>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
            <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
            <style>
                .con-body {
                    background-color: #d1e4e6;
                    min-height: 100vh;
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: center;
                }

                .main-card {
                    background-color: white;
                    border-radius: 0.75rem;
                    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
                    padding: 2rem;
                    width: 100%;
                    max-width: 900px;
                    margin: 1rem auto;
                }

                .card-header {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                

                .form-control {
                    margin-bottom: 1rem;
                    padding: 0.75rem;
                    font-size: 1rem;
                }

                .footer {
                    text-align: center;
                    padding: 1rem;
                    color: #9ca3af;
                    font-size: 0.75rem;
                    margin-top: 1rem;
                }

                @media (min-width: 768px) {
                    .con-faq{
                        width: 700px;
                    }
                }


            </style>

            <t t-call="website.layout">
            <div class="con-body">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-12">
                        <!-- Main card -->
                        <div class="main-card py-auto">
                            <!-- heading -->
                            <div class="card-header mb-5 mb-lg-3 mb-md-2 mb-sm-2" style="display:flex; justify-content: center;">
                                <div class="logo-container">
                                    <h3 class="text-center">Frequently asked Questions</h3>
                                </div>
                            </div>

                            <div>
                                <p class="text-center mb-4 mb-lg-3 mb-md-2 mb-sm-2 text-muted" style="font-size: 18px;">These are the most commonly asked questions about VANAESA Health care, Can't find what you are looking for? Chat to our friendly team.</p>
                            </div>
                        
                            <div class="form-outline form-white mt-2 mb-1">
                                <div class="container py-3 py-md-1 d-flex justify-content-center">         
                                    <div class="accordion accordion-flush" id="accordionExample">
                                        <t t-foreach="faqs" t-as="faq">
                                        <div class="accordion-item con-faq">
                                            <h2 class="accordion-header" t-att-id="'heading_' + str(faq.id)">
                                                <button class="accordion-button collapsed" type="button" t-att-data-bs-toggle="'collapse'" t-att-data-bs-target="'#collapse_' + str(faq.id)" t-att-aria-controls="'collapse_' + str(faq.id)">
                                                    <a href="javascript:void(0);" t-att-id="'faq_' + str(faq.id)"><t t-esc="faq.name"/></a>
                                                </button>
                                            </h2>
                                            <div t-att-id="'collapse_' + str(faq.id)" class="accordion-collapse collapse" t-att-aria-labelledby="'heading_' + str(faq.id)" data-bs-parent="#accordionExample">
                                                <div class="accordion-body" t-att-id="'faq_answer_' + str(faq.id)">
                                                    <p t-esc="faq.value"/>
                                                </div>
                                            </div>
                                        </div>
                                        </t>   
                                        <!-- <t t-foreach="faqs" t-as="faq">
                                            <div class="accordion-item con-faq">
                                                <h2 class="faq-question" t-attf-data-id="#faq_#{faq.id}">
                                                    <a href="javascript:void(0);" t-attf-id="faq_#{faq.id}"><t t-esc="faq.name"/></a>
                                                </h2>
                                                <div class="faq-answer" t-attf-id="faq_answer_#{faq.id}" style="display:none;">
                                                    <p t-esc="faq.value"/>
                                                </div>
                                            </div>
                                        </t> -->
                                    </div>
                                </div>                                        
                            </div>
 
                        </div>
                        
                        <!-- Footer -->
                        <div class="footer">
                            Copyright Â© Synapse Medical Pte Ltd
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
                <script src="https://unpkg.com/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
                <script src="/web/static/lib/jquery/jquery.js"></script>
                <!-- <script>
                    $(document).ready(function () {
                        $('.faq-question a').click(function () {
                            var id = $(this).attr('id');
                            $('#faq_answer_' + id.split('_')[1]).toggle();
                        });
                    });
                </script> -->
            </t>
        </template>
    </data>
</odoo>

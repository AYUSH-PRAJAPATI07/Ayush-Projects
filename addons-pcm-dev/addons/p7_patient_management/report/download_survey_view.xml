<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_survey_answer_form" model="ir.actions.report">
            <field name="name">Survey Report</field>
            <field name="model">survey.user_input</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">p7_patient_management.report_survey_form_download</field>
            <field name="report_file">p7_patient_management.report_survey_form_download</field>
            <field name="print_report_name">(object.localized_op_datetime.replace(':', '') if object.localized_op_datetime else '') + " " + (object.partner_id.name or "") + " " + (object.partner_id.last_name or "") + " " + (object.partner_id.nric_number or "")</field>
            <field name="binding_model_id" ref="model_survey_user_input"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
<odoo>
    <data>
        <record id="verification_email_template" model="mail.template">
            <field name="name">User Verification Email Template</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="email_from">VANAESA &lt;admin@vanaesa.com&gt;</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="subject">Login Verification</field>
            <field name="description">Sent to user who is not verified yet</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        Hello <span style="font-weight: bold;" t-out="object.name"/>,
                    </p><br/>
                    <p style="margin: 0px; color:black; padding: 0px; font-size: 15px;">
                        Please find the url for the login verification below: 
                    </p><br/>
                    <a style="background-color:#54b1c9; padding:8px 16px 8px 16px; text-decoration:none; color:#fff; border-radius:5px;" t-attf-href="{{ctx.get('url')}}">Login Verification</a><br/><br/>
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        Have a great day!
                    </p><br/><br/>
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        <span style="font-weight: bold;">The VANAESA team</span>
                    </p>
                </div>
            </field>
        </record>

        <record id="email_verification_template" model="mail.template">
            <field name="name">Email Verification Template</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="email_from">VANAESA &lt;admin@vanaesa.com&gt;</field>
            <field name="email_to">{{ ctx.get('email_to', '') }}</field>
            <field name="subject">Email Verification</field>
            <field name="description">Sent to user who is not verified the email yet</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        Hello <span style="font-weight: bold;" t-out="object.name"/>,
                    </p><br/>
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        This is your OTP for the email verification : <t t-out="ctx.get('otp')"/>
                    </p><br/>
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        Have a great day!
                    </p><br/><br/>
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        <span style="font-weight: bold;">The VANAESA team</span>
                    </p>
                </div>
            </field>
        </record>

        <record id="partial_survey_notification_template" model="mail.template">
            <field name="name">Partial Survey Notification Template</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="email_from">VANAESA &lt;admin@vanaesa.com&gt;</field>
            <field name="email_to">{{ object.partner_id.email }}</field>
            <field name="subject">An Important Reminder</field>
            <field name="description">Sent to user who is not completed the form yet</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        Dear <span style="font-weight: bold;" t-out="object.partner_id.name"/> <span style="font-weight: bold;" t-out="object.partner_id.last_name"/>,
                    </p><br/>
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        This is an important reminder from VANAESA (Virtual Anaesthesia Assessment)
                    </p><br/>
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        In preparation for your upcoming surgery with Dr <t style="font-weight: bold;" t-out="ctx.get('surgeon')"/>, your Anaesthetist has specially prepared a Pre-Anaesthetic Questionnaire(PAQ) for you. This provides your Anaesthetist with important information about you and your health, in order to facilitate a safe and comfortable experience for you during your anaesthetic.
                    </p><br/>
                    <p style="margin: 0px; color:black; padding: 0px; font-size: 15px;">
                        Please follow this link to complete your PAQ. It is important to complete it as soon as possible.
                    </p><br/>
                    <a style="background-color:#54b1c9; padding:8px 16px 8px 16px; text-decoration:none; color:#fff; border-radius:5px;" t-attf-href="{{ctx.get('url')}}">Pre-Anaesthetic Questionnaire</a><br/><br/>
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        For more information, please visit <a style="color:blue;" href="https://vanaesa.com/">vanaesa.com</a>
                    </p><br/>
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        Have a great day!
                    </p><br/><br/>
                    <p style="margin: 0px; padding: 0px; font-size: 15px;">
                        <span style="font-weight: bold;">The VANAESA team</span>
                    </p>
                </div>
            </field>
        </record>

